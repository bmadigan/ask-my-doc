{
  "permissions": {
    "allow": [
      "Bash(chmod:*)",
      "Bash(python3:*)",
      "Bash(find:*)",
      "Bash(vendor/bin/pint:*)",
      "Bash(php artisan test:*)",
      "Bash(npm:*)"
    ],
    "deny": [],
    "ask": []
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/skill-activation.js \"$CLAUDE_PROMPT\" 2>/dev/null || true"
          },
          {
            "type": "command",
            "command": "node .claude/hooks/constitution-check.js \"$CLAUDE_PROMPT\" 2>/dev/null || true"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "if [[ -f \"vendor/bin/pint\" ]] && [[ \"$CLAUDE_FILE_PATHS\" == *.php ]]; then vendor/bin/pint \"$CLAUDE_FILE_PATHS\" 2>/dev/null || true; fi"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/check-plan-context.js 2>/dev/null || true"
          }
        ]
      }
    ]
  },
  "mcpServers": {
    "laravel-boost": {
      "command": "php",
      "args": ["artisan", "boost:mcp"],
      "cwd": "${workspaceFolder}"
    }
  }
}

